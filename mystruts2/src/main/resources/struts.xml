<?xml version="1.0" encoding="UTF-8" ?>
<!-- 指定Struts 2配置文件的DTD信息 -->
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 配置Struts 2配置文件的根元素 -->
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"></constant>
	<constant name="struts.objectFactory" value="spring"></constant>
	<constant name="struts.serve.static.browserCache" value="false" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.devMode" value="true" />

	<!-- Struts 2的Action必须放在指定的包空间下定义 -->
	<package name="default" namespace="/" extends="struts-default">

		<action name="loginPro" class="org.fkjava.action.LoginAction">
			<result name="input">/login/loginForm.jsp</result>
			<result name="error">/login/error.jsp</result>
			<result name="success">/login/success.jsp</result>
		</action>
		
		<action name="registPro" class="org.fkjava.action.LoginAction" method = "registUser">
			<result name="input">/login/loginForm.jsp</result>
			<result name="error">/login/error.jsp</result>
			<result name="success">/login/success.jsp</result>
		</action>
		
		<action name="viewUsers" class="org.fkjava.action.ViewUsersAction" >
			<result name="success">/login/listUsers.jsp</result>
		</action>

		<action name="*">
			<!-- 直接跳转到*所代表的页面页面，
			比如用户访问abc Action，此时*代表abc，
			Struts 2将会跳转到abc.jsp页面 -->
			<result>/{1}.jsp</result> 
		</action>
	</package>
</struts>