<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 配置Struts 2配置文件的根元素 -->
<struts>
	<!-- Struts 2的Action必须放在指定的包空间下定义 -->
	<package name="main" namespace="/" extends="struts-default">
		<action name="main" class="com.huawei.support.enterprise.web.action.MainAction">
			<result name="success">/WEB-INF/content/users/listUsers.jsp</result>
		</action>
		
		<action name="*">
			<!-- 直接跳转到*所代表的页面页面， 比如用户访问abc Action，此时*代表abc， Struts 2将会跳转到abc.jsp页面 -->
			<result>/WEB-INF/content/doc/{1}.jsp</result>
		</action>
	</package>

</struts>